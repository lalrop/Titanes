<div class="my-2 text-center text-white">
  <h3>Historia de</h2>
  <h1><em>Titanes</em></h1>
</div>

<div class="my-5 text-white">
  <p><em>Veamos camaron...<em></p>
</div>

<div class="text-center text-white">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field my-3">
      <%= f.label :email, 'Desembucha tu correo!' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "ejemplo@mail.com", class:"text-center bg-transparent text-white my-2"%>
    </div>

    <div class="field my-3">
      <%= f.label :password, 'Ahora tu contraseña!' %><br />
      <%= f.password_field :password, autocomplete: "*******", class:"text-center bg-transparent text-white my-2" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field my-2">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, 'Recordarme'%>
      </div>
    <% end %>

    <div class="actions my-3 row">
      <div class="col-2"></div>
      <div class="col-8">
        <%= f.submit "Inicar sesión", class: "btn btn-danger btn-lg" %>
      </div>
      <div class="col-2"></div>
    </div>
  <% end %>

  <div class="row my-5">
    <div class="col-2"></div>
    <div class="col-8">
      <%= render "devise/shared/links" %>
    </div>
    <div class="col-2"></div>
  </div>

</div>
