<h1 class="mt-3">Tinieblas</h1>
<div class="d-flex align-items-start">
  <div class="nav flex-column nav-pills me-3" id="v-pills-tab" role="tablist" aria-orientation="vertical">
    <% @tinieblas.each do |tiniebla| %>
        <button class="nav-link text-start" id="v-pills-<%=tiniebla.id%>-tab" data-bs-toggle="pill" data-bs-target="#v-pills-<%=tiniebla.id%>" type="button" role="tab" aria-controls="v-pills-<%=tiniebla.id%>" aria-selected="true">
            <%=tiniebla.name%>
        </button>    
    <% end %>
  </div>
  
  <div class="tab-content" id="v-pills-tabContent">
    <% @tinieblas.each do |tiniebla| %>
        <div class="tab-pane fade" id="v-pills-<%=tiniebla.id%>" role="tabpanel" aria-labelledby="v-pills-<%=tiniebla.id%>-tab">      
           <div class="mt-5"><%=tiniebla.description%></div>
           <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">Nivel</th>
                    <th scope="col">Descripcion</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>1</th>
                    <td><%=tiniebla.level1%></td>                
                </tr>
                <tr>
                    <th>2</th>
                    <td><%=tiniebla.level2%></td>
                </tr>
                <tr>
                    <th>3</th>
                    <td><%=tiniebla.level3%></td>
                </tr>
                <tr>
                    <th>4</th>
                    <td><%=tiniebla.level4%></td>
                </tr>
                <tr>
                    <th>5</th>
                    <td><%=tiniebla.level5%></td>
                </tr>
            </tbody>
           </table>
        </div>
    <% end %>

  </div>
</div>
    <%= button_to 'Salir', characters_path, method: 'get', class:"my-4 btn btn-danger"%>